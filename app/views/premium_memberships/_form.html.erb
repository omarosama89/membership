<% if current_user.premium_member? %>
  <button class="btn btn-success" disabled>Premium Membership</button>
<% else %>
  <%= form_with(url: premium_memberships_path, method: :post, local: true) do |form| %>
    <div class="actions">
      <%= form.submit 'Premium Membership', class: "btn btn-success" %>
    </div>
  <% end %>
<% end %>