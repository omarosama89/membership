<div id="carouselExampleIndicators-<%= product.id %>" class="carousel slide my-4" data-ride="carousel">
  <ol class="carousel-indicators">
    <% product.images.each_with_index do |image, idx| %>
      <li data-target="#carouselExampleIndicators-<%= product.id %>" data-slide-to="<%= idx %>" class="<%= 'active' if idx == 0 %>"</li>
    <% end %>
  </ol>
  <div class="carousel-inner" role="listbox">
    <% product.images.each_with_index do |image, idx| %>
      <div class="carousel-item <%= 'active' if idx == 0 %>">
        <img class="d-block img-fluid" src="<%= image.url %>" alt="First slide">
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators-<%= product.id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators-<%= product.id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>